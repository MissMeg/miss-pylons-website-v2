        .col-md.align-self-center
          h3 T
          p 6:30pm
      .row.align-items-center.justify-content-center
        .col-md.align-self-center
          h3 W
          p 6:30pm
        .col-md.align-self-center
          h3 TH
          p 6:30pm
  #social-section
    h2.title-border SOCIAL
    .container
      .row.align-items-center.justify-content-center
        .col-md.align-self-center
          a(href="http://www.twitch.tv/miss_pylons")
            i.fab.fa-twitch.fa-2x
            p Twitch.tv/Miss_Pylons
        .col-md.align-self-center
          a(href="http://www.github.com/missmeg")
            i.fab.fa-github.fa-2x
            p GitHub.com/MissMeg
        .col-md.align-self-center
          a(href="http://www.twitter.com/miss_pylons")
            i.fab.fa-twitter.fa-2x
